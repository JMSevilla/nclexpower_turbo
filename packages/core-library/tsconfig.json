{
  "extends": "../typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "./*.ts",
    "./*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
